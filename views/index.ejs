<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>NBA</title>

  <!-- CSS (load bootstrap from a CDN) -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link href= "/assets/style.css" rel="stylesheet" type="text/css" />

</head>

<body>
  <nav class="navbar navbar-default" role="navigation">
<div class="container-fluid">

    <div class="navbar-header">
        <a class="navbar-brand" href="#">
            <span> NBA - </span>
            NoSQL Application with NodeJS & MongoDB
        </a>

        <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
        </ul>
    </div>

</div>
</nav>


<div class="container">
  <div class="row">
    <div class="col-md-4">
    <div class="form_main">
                <h4 class="heading"><strong>NBA </strong> Search <span></span></h4>
                <div class="form">
                	<form action="/" method="POST">
                    <input type="text"  placeholder="TeamName" value="" name="TeamName" class="txt">
                    <br>
                    <br>

                    <input type="submit" value="submit" name="submit" class="txt2">
                </form>
            </div>
            </div>
      </div>


  </div>
</div>

  <br>
  <br>


  <ul class="Actions">
    <table  id="compactTable" class="table">

      <thead class="thead-light">

        <tr>
           <th>Result</th>
        </tr>
        </thead>
   <tbody>
  <% for(var i=0; i< Actions.length; i++) {%>
    <li class="list-group-item">

     <strong>  <span><%= Actions[i].TeamName %></span> </strong>
      <span>:</span>
      <span><%= Actions[i].PlayerName %></span>
</span>

    </li>
  <% } %>
  </ul>

</tbody>
</table>


</body>
</html>
